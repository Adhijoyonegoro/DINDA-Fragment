<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/txt_kategori1"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:paddingLeft="25dp"
                    android:paddingRight="15dp"
                    android:text="PT"
                    android:textSize="13dp"
                    android:fontFamily="@font/vagroundedstd_thin"
                    android:textColor="@color/colorGrayDark"
                    />


                <ImageView
                    android:id="@+id/img_sent"
                    android:layout_weight="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:paddingLeft="15dp"
                    android:paddingRight="25dp"
                    android:src="@drawable/asset017"
                    android:visibility="visible"
                    />

                <ImageView
                    android:id="@+id/img_done"
                    android:layout_weight="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:paddingLeft="15dp"
                    android:paddingRight="25dp"
                    android:src="@drawable/asset016"
                    android:visibility="gone"
                    />

                <ImageView
                    android:id="@+id/img_undone"
                    android:layout_weight="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:paddingLeft="15dp"
                    android:paddingRight="25dp"
                    android:src="@drawable/asset018"
                    android:visibility="gone"
                    />

            </RelativeLayout >
        </LinearLayout>
    </LinearLayout>
</LinearLayout>